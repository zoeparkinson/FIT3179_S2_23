{
	"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
	"title": "All games played in a FIFA Women's World Cup 1991-2023",
	"width": "container",
	"height": 300,
	"background": null,
	"data": {
	  "url": "https://raw.githubusercontent.com/zoeparkinson/FIT3179_S2_23/main/Data/matches_id.csv"
	},
	"transform": [
	  {
		"window": [{ "op": "row_number", "as": "MatchNumber" }],
		"groupby": ["Year"]
	  },
	  { "calculate": "datum.MatchNumber - 1", "as": "MatchIndex" }
	],
	"layer": [
	  {
		"mark": { "type": "rect" },
		"encoding": {
		  "y": {
			"field": "Year",
			"timeUnit": "year",
			"type": "ordinal",
			"axis": { "title": "Year", "orient": "left", "grid": false }
			
		  },
		  "x": {
			"field": "id",
			"sort": "ascending",
			"type": "quantitative",
			"axis": {
			  "title": "Match number",
			  "grid": false
			  
			}
			
		  },
		  "color": {
			"field": "Attendance",
			"type": "quantitative",
			"scale": { "scheme": "greens" }
		  },
		  "stroke": {"value": "black"},
		  "tooltip": [
			{ "field": "home_team", "title": "Home Team" },
			{ "field": "away_team", "title": "Away Team" },
			{ "field": "Score", "title": "Score" },
			{ "field": "Date", "timeUnit": "yearmonthdate","title": "Date" },
			{ "field": "Attendance", "title": "Attendance" }
		  ]
		}
	  }
	  
	],
	"config": {
	  "view": { "stroke": "transparent" },
	  "axisX": { "domain": false },
	  "axisY": { "domain": false },
	  "title": {"color": "white", "fontSize": 29},
    "axis": {
      "titleColor": "white" ,
      "titleFontSize": 15,
      "labelColor": "white",
      "labelFontSize": 13,
      "gridColor": "black"
 
    },
    "legend": { "titleColor": "white" ,
    "titleFontSize": 15,
    "labelColor": "white",
    "labelFontSize": 13}
  
	}
  }
  